package com.g4.core;

import java.sql.SQLException;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.QueryParam;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import com.g4.beans.User;
import com.g4.dao.UserDao;

@Path("/user")
public class UserWebService {

	private UserDao ud;
	@GET
	@Produces(MediaType.APPLICATION_JSON)
	@Path("/user")
	public Response getUser(@QueryParam("userId") String id, @QueryParam("token") String token){
		if (id != null && id.length() > 0 && id != null && id.length() > 0){
			User u = null;
			//try {
				u = ud.getUser(id,token);
			/*} catch (SQLException e) {
				return  Response.status(500).entity("INTERNAL_ERROR").build();
			}*/
			if (u == null)
				return Response.status(401).entity("USER_GET_ERROR").build();
			else
				return Response.status(200).entity(u.getJson(u)).build();
		}else{
			return Response.status(400).entity("USER_GET_ERROR_MANDATORY").build();
		}
	}
	
}
